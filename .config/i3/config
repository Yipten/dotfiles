# screenshot location
set $screenshotDir $HOME/Pictures/Screenshots/
set $screenshotDelay 5000

# screenshot tool (ctrl = save, shift = gui, $mod = delay)
bindsym --release Print exec --no-startup-id flameshot full -c
bindsym --release ctrl+Print exec --no-startup-id flameshot full -p $screenshotDir
bindsym --release shift+Print exec --no-startup-id flameshot gui
bindsym --release $mod+Print exec --no-startup-id flameshot full -c -d $screenshotDelay
bindsym --release ctrl+shift+Print exec --no-startup-id flameshot gui -p $screenshotDir
bindsym --release ctrl+$mod+Print exec --no-startup-id flameshot full -p $screenshotDir -d $screenshotDelay
bindsym --release shift+$mod+Print exec --no-startup-id flameshot gui -d $screenshotDelay
bindsym --release ctrl+shift+$mod+Print exec --no-startup-id flameshot gui -p $screenshotDir -d $screenshotDelay

# power button
#bindsym --release XF86PowerOff exec --no-startup-id $HOME/scripts/i3power.sh hibernate

# power management
set $power_management "power management: lock (L), logout (E), suspend (S), hibernate (H), reboot (R), shutdown (shift+S)"

bindsym --release $mod+Escape mode $power_management

mode $power_management {
	# power options
	bindsym --release l exec --no-startup-id i3-msg mode "default" && $HOME/scripts/i3power.sh lock
	bindsym --release e exec --no-startup-id $HOME/scripts/i3power.sh logout
	bindsym --release s exec --no-startup-id i3-msg mode "default" && $HOME/scripts/i3power.sh suspend
	bindsym --release h exec --no-startup-id i3-msg mode "default" && $HOME/scripts/i3power.sh hibernate
	bindsym --release r exec --no-startup-id $HOME/scripts/i3power.sh reboot
	bindsym --release Shift+s exec --no-startup-id $HOME/scripts/i3power.sh shutdown

	# just for fun
	bindsym --release w exec --no-startup-id i3-msg mode "default" && $HOME/scripts/lock_win.sh

	# return to default mode
	bindsym --release Escape mode "default"
}

# gaps
gaps inner 20

